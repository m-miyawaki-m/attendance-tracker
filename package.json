{
  "name": "attendance-tracker",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:report": "vitest run --coverage --reporter=html",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "firebase": "firebase",
    "firebase:login": "firebase login",
    "firebase:init": "firebase init firestore",
    "firebase:deploy": "firebase deploy --only firestore:rules",
    "firebase:emulators": "firebase emulators:start",
    "firebase:emulators:export": "firebase emulators:export ./firebase-data",
    "firebase:emulators:import": "firebase emulators:start --import=./firebase-data",
    "seed:emulator": "tsx scripts/seedEmulator.ts",
    "export:production": "tsx scripts/exportProductionData.ts",
    "seed:emulator:from-export": "tsx scripts/importToEmulator.ts",
    "export:emulator": "tsx scripts/exportEmulatorData.ts",
    "upload:to-production": "tsx scripts/uploadToProduction.ts",
    "seed:users": "tsx scripts/seedUsers.ts",
    "seed:attendances": "tsx scripts/seedAttendances.ts",
    "fetch:users": "tsx scripts/fetchUsers.ts",
    "register:auth": "tsx scripts/registerAuthUsers.ts",
    "update:managers": "tsx scripts/updateManagerRelations.ts"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "apexcharts": "^5.3.6",
    "firebase": "^12.7.0",
    "pinia": "^3.0.4",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4",
    "vue3-apexcharts": "^1.10.0",
    "vuetify": "^4.0.0-alpha.0"
  },
  "devDependencies": {
    "@pinia/testing": "^1.0.3",
    "@tsconfig/node24": "^24.0.3",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.4",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/eslint-plugin": "^1.6.4",
    "@vitest/ui": "^4.0.16",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "~10.6.2",
    "firebase-admin": "^13.6.0",
    "firebase-tools": "^15.1.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.4.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.7.4",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.2.1"
  }
}
